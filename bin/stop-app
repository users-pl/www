#!/bin/bash

export NVM_DIR="/home/www/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

DATE=`date`
ROOT=/home/www
LOG="$ROOT/log/stopapp.log"
NEWAPP=""
PID=""
NODE=""


site="wix.2bees.com"
app="$ROOT/$site"

cd $app
  PID=$(ps -ef |grep $app | awk '{ print $2 }')
  (echo "stopping $app ...") 
  kill -9 $PID  >> $LOG 2>&1

